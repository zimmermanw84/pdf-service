{
    "rules": {
	"indent": "off",
        "indent-legacy": [
            2,
            "tab"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": [
            2,
            {"args": "after-used",
            "argsIgnorePattern": "^_"}
        ],
        "one-var": [
            2,
            "never"
        ],
        "no-multiple-empty-lines": [
            1,
            {"max": 2}
        ],
        "padded-blocks": [
            1,
            "never"
        ],
        "no-trailing-spaces": [
            1,
            { "skipBlankLines": true }
        ],
        "no-spaced-func": [
            2
        ],
        "strict": ["error"]

    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "mocha":true,
        "es6": true,
        "node": true
    },
    "globals": {
        "requireRoot": true
    },
    "extends": "eslint:recommended"
}
